<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentacion.FormProductoFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorSecondary"
            android:textColor="?attr/colorOnSecondary"
            android:text="Registrar Productos"
            android:textAlignment="center"
            android:fontFamily="@font/daughter"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgSelectedProducto"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_weight="1"
                    android:src="@mipmap/ic_launcher" />

                <Button
                    android:id="@+id/btnChoose"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Cargar"
                    android:textAlignment="center"
                    android:fontFamily="@font/yellowtail"
                    android:textColor="?attr/colorOnPrimary"
                    android:backgroundTint="?attr/colorPrimary"
                    android:textSize="12sp" />

            </LinearLayout>

            <EditText
                android:id="@+id/txtNombreProducto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Nombre"
                android:textAlignment="center"
                android:fontFamily="@font/yellowtail"
                android:textColor="?attr/colorOnSecondary"
                android:textSize="12sp"
                android:minHeight="48dp"
                android:text="" />

            <EditText
                android:id="@+id/txtDescripcionProducto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="DescripciÃ³n"
                android:textAlignment="center"
                android:textColor="?attr/colorOnSecondary"
                android:fontFamily="@font/yellowtail"
                android:textSize="12sp"
                android:minHeight="48dp"
                android:text="" />

            <EditText
                android:id="@+id/txtPrecioProducto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Precio"
                android:inputType="numberDecimal"
                android:textAlignment="center"
                android:fontFamily="@font/yellowtail"
                android:textColor="?attr/colorOnSecondary"
                android:textSize="12sp"
                android:minHeight="48dp" />

        </LinearLayout>

        <EditText
            android:id="@+id/txtIdProducto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:ems="10"
            android:hint="Id"
            android:minHeight="48dp"
            android:text=""
            android:textAlignment="center"
            android:fontFamily="@font/yellowtail"
            android:textColor="?attr/colorOnSecondary"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnInsertarProducto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/yellowtail"
                android:padding="10dp"
                android:text="Insertar"
                android:textAlignment="center"
                android:textColor="?attr/colorOnSecondary"
                android:backgroundTint="?attr/colorSecondary"
                android:textSize="11sp" />

            <Button
                android:id="@+id/btnConsultarProducto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/yellowtail"
                android:padding="10dp"
                android:text="Consultar"
                android:textAlignment="center"
                android:backgroundTint="?attr/colorPrimary"
                android:textColor="?attr/colorOnPrimary"
                android:textSize="11sp" />

            <Button
                android:id="@+id/btnEliminarProducto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/yellowtail"
                android:padding="10dp"
                android:text="Eliminar"
                android:textAlignment="center"
                android:textColor="?attr/colorOnSecondary"
                android:backgroundTint="?attr/colorSecondary"
                android:textSize="11sp" />

            <Button
                android:id="@+id/btnModificarProducto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/yellowtail"
                android:padding="10dp"
                android:text="Modificar"
                android:textAlignment="center"
                android:backgroundTint="?attr/colorPrimary"
                android:textColor="?attr/colorOnPrimary"
                android:textSize="11sp" />

        </LinearLayout>

        <Button
            android:id="@+id/btnListaProductos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Lista Productos"
            android:textAlignment="center"
            android:fontFamily="@font/yellowtail"
            android:backgroundTint="?attr/colorPrimary"
            android:textColor="?attr/colorOnPrimary"
            android:textSize="12sp" />

    </LinearLayout>

</FrameLayout>